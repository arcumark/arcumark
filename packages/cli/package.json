{
	"name": "@arcumark/cli",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"bin": {
		"arcumark": "./dist/index.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node --format esm --minify && chmod +x dist/index.js",
		"dev": "bun run src/index.ts",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "tsc --noEmit"
	},
	"dependencies": {
		"@arcumark/shared": "workspace:*",
		"commander": "^12.1.0",
		"chalk": "^5.3.0",
		"ora": "^8.1.1",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/prompts": "^2.4.9",
		"bun-types": "^1.3.0",
		"typescript": "^5"
	}
}
