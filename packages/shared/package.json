{
	"name": "@arcumark/shared",
	"version": "1.0.0",
	"description": "Shared utilities and types for Arcumark",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"arcumark",
		"shared",
		"utilities",
		"markdown"
	],
	"homepage": "https://github.com/arcumark/arcumark#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/arcumark/arcumark.git",
		"directory": "packages/shared"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./storage": {
			"types": "./dist/storage/index.d.ts",
			"import": "./dist/storage/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.js"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "eslint && tsc --noEmit"
	},
	"dependencies": {
		"better-sqlite3": "^11.7.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^20",
		"bun-types": "^1.3.0",
		"typescript": "^5"
	}
}
