{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "ES2020",
		"lib": ["ES2020"],
		"types": ["bun-types", "node"],
		"paths": {
			"@arcumark/shared": ["../shared/src/index"],
			"@arcumark/shared/*": ["../shared/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../shared" }]
}
