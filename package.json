{
	"name": "arcumark",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter web dev",
		"build": "bun run --filter '*' build",
		"build:web": "bun run --filter web build",
		"build:cli": "bun run --filter cli build",
		"build:mcp": "bun run --filter mcp build",
		"build:shared": "bun run --filter shared build",
		"start": "bun run --filter web start",
		"lint": "bun run --filter '*' lint",
		"format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
		"format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
		"typecheck": "bun run --filter '*' typecheck",
		"clean": "bun run --filter '*' clean && rm -rf node_modules",
		"deploy": "bun run --filter web deploy",
		"upload": "bun run --filter web upload",
		"preview": "bun run --filter web preview",
		"prepare": "husky"
	},
	"dependencies": {
		"@base-ui/react": "^1.0.0",
		"@opennextjs/cloudflare": "^1.11.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.555.0",
		"next": "15.5.7",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"shadcn": "^3.6.2",
		"tailwind-merge": "^3.4.0",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/eslintrc": "^3",
		"@next/eslint-plugin-next": "15.4.6",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"eslint-plugin-react-hooks": "^7.0.1",
		"husky": "^9.1.7",
		"prettier": "^3.7.1",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wrangler": "^4.51.0"
	}
}
