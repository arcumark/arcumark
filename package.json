{
	"name": "arcumark",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter @arcumark/web dev",
		"build": "bun run --filter '@arcumark/*' build",
		"build:web": "bun run build:shared && bun run --filter @arcumark/web build",
		"build:cli": "bun run build:shared && bun run --filter @arcumark/cli build",
		"build:mcp": "bun run build:shared && bun run --filter @arcumark/mcp build",
		"build:shared": "bun run --filter @arcumark/shared build",
		"start": "bun run --filter @arcumark/web start",
		"lint": "bun run --filter '@arcumark/*' lint",
		"format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
		"format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
		"typecheck": "bun run --filter '@arcumark/*' typecheck",
		"clean": "bun run --filter '@arcumark/*' clean && rm -rf node_modules",
		"cf:build": "cd packages/web && bunx opennextjs-cloudflare build",
		"cf:deploy": "cd packages/web && bunx opennextjs-cloudflare deploy",
		"cf:upload": "cd packages/web && bunx opennextjs-cloudflare upload",
		"cf:preview": "cd packages/web && bunx opennextjs-cloudflare preview",
		"deploy": "bun run cf:build && bun run cf:deploy",
		"upload": "bun run cf:build && bun run cf:upload",
		"preview": "bun run cf:build && bun run cf:preview",
		"prepare": "husky"
	},
	"dependencies": {
		"@base-ui/react": "^1.0.0",
		"@opennextjs/cloudflare": "^1.11.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.555.0",
		"mediabunny": "^1.27.2",
		"mp4-muxer": "^5.2.2",
		"next": "15.5.7",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"shadcn": "^3.6.2",
		"tailwind-merge": "^3.4.0",
		"tw-animate-css": "^1.4.0",
		"webm-muxer": "^5.1.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/eslintrc": "^3",
		"@next/eslint-plugin-next": "15.4.6",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.50.1",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-hooks": "^7.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.1",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wrangler": "^4.51.0"
	},
	"lint-staged": {
		"packages/**/*.{ts,tsx}": [
			"eslint --fix --max-warnings 0",
			"prettier --write"
		],
		"packages/**/*.{json,jsonc,css,md,yml,yaml}": [
			"prettier --write"
		]
	}
}
